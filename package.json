{
  "name": "@neiropacks/xterm-mouse",
  "version": "0.4.4",
  "description": "A library for working with the mouse in the terminal.",
  "repository": {
    "type": "git",
    "url": "https://github.com/neiropacks/xterm-mouse.git"
  },
  "keywords": [
    "xterm",
    "terminal",
    "mouse",
    "input",
    "cli",
    "node",
    "typescript"
  ],
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --sourcemap --minify --target node && tsc --emitDeclarationOnly --project tsconfig.json",
    "lint": "biome check . && dprint check",
    "format": "biome check --write --unsafe . && dprint fmt",
    "dev:basic": "bun run --watch examples/basic.ts",
    "dev:streaming": "bun run --watch examples/streaming.ts",
    "test": "bun test",
    "coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/bun": "latest",
    "dprint": "^0.50.2",
    "lefthook": "^2.0.4",
    "typescript": "^5"
  },
  "peerDependencies": {},
  "files": [
    "dist"
  ]
}
